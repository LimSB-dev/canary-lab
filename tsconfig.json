{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": [
      "node",
      "react",
      "react-dom",
      "jest",
      "@testing-library/jest-dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "src/constants/editor/editorTools.js"
  ],
  "paths": {
    "app/*": ["app/*"],
    "pages/*": ["pages/*"],
    "containers/*": ["containers/*"],
    "components/*": ["components/*"],
    "sections/*": ["sections/*"],
    "constants/*": ["constants/*"],
    "models/*": ["models/*"],
    "remotes/*": ["remotes/*"],
    "styles/*": ["styles/*"],
    "utils/*": ["utils/*"],
    "hooks/*": ["hooks/*"],
    "stores/*": ["stores/*"]
  },
  "exclude": ["node_modules"],
  "extensions": [".js", ".jsx", ".ts", ".tsx"]
}
